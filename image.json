      "type": "string"
    },
    "action": {
      "type": "string"
    },
    "entry": {
      "type": "object",
      "properties": {
        "uid": {
          "type": "string"
        },
        "fid": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "filemime": {
          "type": "string"
        },
        "filesize": {
          "type": "string"
        },
        "revision_timestamp": {
          "type": "integer"
        },
        "status": {
          "type": "string"
        },
        "focus_rect": {
          "type": "string"
        },
        "crop_rect": {
          "type": "string"
        },
        "alt_text": {
          "type": ["string", "null"]
        },
        "title": {
          "type": "string"
        },
        "byline": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        },
        "copyright": {
          "type": ["string", "null"]
        },
        "source": {
          "type": "string"
        },
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        },
        "revision_hash": {
          "type": "string"
        },
        "drupal_path": {
          "type": "string"
        },
        "aims_image_name": {
          "type": "string"
        },
        "aims_image_path": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "aims_image_path"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "type",
    "action",
    "entry"
  ]
